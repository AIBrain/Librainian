	<ItemGroup>
		<None Include="Librainian.png">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
		<None Include="License.md">
			<Pack>True</Pack>
			<PackagePath></PackagePath>
		</None>
	</ItemGroup>

