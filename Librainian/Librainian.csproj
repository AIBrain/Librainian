<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net48;netstandard2.1;</TargetFrameworks>
    <ApplicationIcon>Librainian.ico</ApplicationIcon>
    <Nullable>disable</Nullable>
    <RootNamespace>Librainian</RootNamespace>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <PackageId>Librainian</PackageId>
    <Version>2020.3.20</Version>
    <Authors>Protiguous</Authors>
    <Company>Protiguous</Company>
    <Product>Librainian Library</Product>
    <Description>A collection of classes, structs, and extensions we've collected over the years that we use in our various projects.
Some are top-notch, most are useful.. though a few are obsolete because of newer technologies and/or algorithms.</Description>
    <Copyright>Copyright Â© Protiguous. All rights reserved.</Copyright>
    <PackageProjectUrl>https://github.com/Protiguous/Librainian</PackageProjectUrl>
    <PackageIcon>Librainian.png</PackageIcon>
    <RepositoryUrl>$(PackageProjectUrl)</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <UserSecretsId>46013adb-36bf-4982-9a1a-6755470fdccc</UserSecretsId>
    <Platforms>x64</Platforms>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Label="Configuration" Condition="'$(TargetFramework)' == 'netstandard2.1'">
    <DefineConstants>NETCORE</DefineConstants>
    <DefineConstants>COREFX20</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Ben.Demystifier" Version="0.1.6" />
    <PackageReference Include="CommandLineParser" Version="2.7.82" />
    <PackageReference Include="JetBrains.Annotations" Version="2020.1.0" />
    <PackageReference Include="LinqFaster" Version="1.0.0" />
    <PackageReference Include="LinqFaster.SIMD" Version="1.0.3" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.8">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.Configuration.UserSecrets" Version="3.0.0" />
    <PackageReference Include="Microsoft.VisualBasic" Version="10.3.0" />
    <PackageReference Include="Microsoft.Win32.Registry" Version="4.7.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="NLog" Version="4.7.0" />
    <PackageReference Include="Rationals" Version="1.3.3" />
    <PackageReference Include="System.Data.SqlClient" Version="4.8.1" />
    <PackageReference Include="System.Management" Version="4.7.0" />
    <PackageReference Include="System.Runtime" Version="4.3.1" />
    <PackageReference Include="System.Runtime.Caching" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Librainian.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System.Windows.Forms">
      <HintPath>C:\Program Files (x86)\Reference Assemblies\Microsoft\Framework\.NETFramework\v4.8\System.Windows.Forms.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
